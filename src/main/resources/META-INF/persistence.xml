<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="EcommercePU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>com.apicompany.e.commerceapplication.dal.entities.User</class>
    <class>com.apicompany.e.commerceapplication.dal.entities.Cart</class>
    <class>com.apicompany.e.commerceapplication.dal.entities.Product</class>
    <class>com.apicompany.e.commerceapplication.dal.entities.ProductOrder</class>
    <class>com.apicompany.e.commerceapplication.dal.entities.Category</class>
    <class>com.apicompany.e.commerceapplication.dal.entities.Order1</class>
    <class>com.apicompany.e.commerceapplication.dal.entities.ProductCart</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/ecommercedb"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
    </properties>
  </persistence-unit>
</persistence>
